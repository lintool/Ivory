    <dependency org="edu.umd" name="cloud9" rev="1.3.2">
        <exclude name="ant"/>
        <exclude org="org.apache.hadoop"/>
        <exclude org="com.cloudera.hadoop"/>
        <exclude org="fastutil"/>
    </dependency>

    <dependency org="" name="dsiutils" rev="1.0.12" />
    <dependency org="" name="sux4j" rev="2.0.1" />
    <dependency org="" name="fastutil" rev="6.0.0" />
    <dependency org="com.martiansoftware" name="jsap" rev="2.1" />
    <dependency org="commons-collections" name="commons-collections" rev="3.2.1" />
    <dependency org="" name="stanford-chinese-segmenter" rev="2011-09-14" />    

    <dependency org="xerces" name="xercesImpl" rev="2.9.1" />
    <dependency org="javax.mail" name="mail" rev="1.4.1"/>    
    <dependency org="opennlp" name="tools" rev="1.5.0"/>    
    <dependency org="opennlp" name="maxent" rev="3.0.0"/>    
    <dependency org="org.apache.lucene" name="lucene-core" rev="3.5.0"/>
    <dependency org="org.apache.lucene" name="lucene-analyzers" rev="3.5.0"/>
    <dependency org="com.sna-projects.kamikaze" name="kamikaze" rev="3.0.3" />

